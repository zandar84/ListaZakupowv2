<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription"
        android:id="@+id/img_artykulu"/>

    <TextView
        android:id="@+id/text_nazwa_artykulu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Nazwa artykuÅ‚u"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_artykulu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Cena"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/img_artykulu"
        app:layout_constraintTop_toBottomOf="@+id/text_nazwa_artykulu"
        android:id="@+id/text_cena_artykulu"/>

</android.support.constraint.ConstraintLayout>